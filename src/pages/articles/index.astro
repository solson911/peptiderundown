---
import Base from '../../layouts/Base.astro';

const allPosts = await Astro.glob('../../content/articles/*.md');
const posts = allPosts.sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime());
---
<Base title="All Guides">
  <section class="max-w-4xl mx-auto px-4 sm:px-6 py-16">
    <h1 class="text-4xl font-extrabold text-text mb-2">Peptide Guides</h1>
    <p class="text-text-muted mb-10">In-depth, research-backed articles on peptides, dosing, safety, and more.</p>
    <div class="space-y-6">
      {posts.map((post) => (
        <a href={post.url}
           class="group block bg-white rounded-2xl border border-gray-200 p-6 hover:border-primary/30 hover:shadow-xl hover:shadow-primary/5 transition-all hover:-translate-y-0.5">
          <div class="flex items-start justify-between gap-4">
            <div>
              {post.frontmatter.category && (
                <span class="inline-block px-2.5 py-0.5 text-xs font-semibold text-primary bg-primary/10 rounded-full mb-2">
                  {post.frontmatter.category}
                </span>
              )}
              <h2 class="text-xl font-bold text-text group-hover:text-primary transition-colors mb-2">
                {post.frontmatter.title}
              </h2>
              <p class="text-text-muted text-sm leading-relaxed">{post.frontmatter.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
</Base>
